---
// https://docs.astro.build/en/guides/view-transitions/
import { ViewTransitions } from 'astro:transitions';
import '../styles/main.css';
import Navigation from '../components/Navigation';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Google fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="flex h-full min-h-screen flex-col bg-background text-primary">
		<Navigation client:only="react" />

		<main class="mx-auto mt-[calc(72px+1rem)] w-full md:mt-0">
			<slot />
		</main>

		<footer class="mt-auto p-6 text-center">Footer</footer>
	</body>
</html>
